# Example env for login-system (do not commit secrets)

PORT=3000
MONGO_URI=your-mongodb-uri
SESSION_SECRET=replace-with-a-strong-secret

LOCKOUT_THRESHOLD=5
LOCKOUT_MINUTES=15
SESSION_IDLE_MINUTES=30

ALLOWED_EMAIL_DOMAIN=student.tus.ie
APP_BASE_URL=http://localhost:3000
VERIFY_TOKEN_MINUTES=1440
OTP_MINUTES=10
RESET_TOKEN_MINUTES=60
TRUSTED_DEVICE_DAYS=30

# Option A: SMTP (recommended in production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_SECURE=false
MAIL_FROM=no-reply@example.com

# Option B: Resend API (alternative to SMTP)
#RESEND_API_KEY=your_resend_api_key
#MAIL_FROM=mphtus <no-reply@yourdomain.com>
